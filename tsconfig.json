{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [".vitepress/*"]
    },
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "typeRoots": ["types", "./node_modules/@types"],
    "types": ["vite/client"],
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue",
    "components/**/*.vue",
    "types/*.d.ts",
    "global.d.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "./**/*.d.ts",
    ".vitepress/**/*.json"
  ]
}
